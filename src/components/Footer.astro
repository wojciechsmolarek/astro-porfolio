---
// Footer component - static Astro component
---

<footer
    class="pt-32 pb-12 px-6 md:px-12 bg-secondary min-h-screen flex flex-col justify-between"
    id="contact"
>
    <div>
        <div class="max-w-6xl">
            <h2
                class="text-[clamp(2.5rem,8vw,8rem)] font-display font-bold uppercase tracking-tighter mb-8 leading-[0.9]"
            >
                ZOPTYMALIZUJMY<br />TWÓJ BIZNES
            </h2>
            <div class="flex flex-col md:flex-row gap-8 md:gap-16 mt-16">
                <a
                    href="mailto:kontakt@wojciechsmolarek.pl"
                    class="text-xl md:text-2xl border-b border-black pb-1 hover:opacity-50 transition-all inline-block font-medium interactive"
                >
                    Napisz do mnie
                </a>
                <a
                    href="/kontakt"
                    class="text-xl md:text-2xl border-b border-black pb-1 hover:opacity-50 transition-all inline-block font-medium interactive"
                >
                    Umów audyt
                </a>
            </div>
        </div>
    </div>

    <div
        class="mt-32 border-t border-black/10 pt-8 flex flex-col md:flex-row justify-between items-end md:items-center gap-8"
    >
        <div class="flex gap-6">
            {
                ["code", "alternate_email", "link"].map((icon) => (
                    <a
                        href="#"
                        class="w-10 h-10 border border-black/20 rounded-full flex items-center justify-center hover:bg-black hover:text-white transition-colors interactive"
                    >
                        <span class="material-symbols-outlined text-sm">
                            {icon}
                        </span>
                    </a>
                ))
            }
        </div>
        <div
            class="flex flex-col md:flex-row gap-8 md:gap-12 text-sm font-mono text-gray-500 uppercase tracking-tight text-right"
        >
            <p>© 2026 Wojciech Smolarek</p>
            <p>Warszawa, PL</p>
            <p class="hidden md:block">
                Czas Lokalny: <span id="time">--:--</span>
            </p>
        </div>
    </div>
</footer>

<script>
    // Client-side time update
    function updateTime() {
        const now = new Date();
        const timeElement = document.getElementById("time");
        if (timeElement) {
            timeElement.textContent = now.toLocaleTimeString("pl-PL", {
                hour: "2-digit",
                minute: "2-digit",
                hour12: false,
            });
        }
    }

    updateTime();
    setInterval(updateTime, 1000);
</script>
