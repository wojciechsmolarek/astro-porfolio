---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import ServicesHighlight from "../components/ServicesHighlight.astro";
import StatsSection from "../components/StatsSection.astro";
import Expertise from "../components/Expertise.astro";
import Philosophy from "../components/Philosophy.astro";
import Icon from "../components/Icon.astro";
import type { TechItem } from "../types";

const techStack: TechItem[] = [
	{ name: "Search Console", icon: "search" },
	{ name: "Lighthouse", icon: "speed" },
	{ name: "Schema.org", icon: "code" },
	{ name: "GA4", icon: "analytics" },
	{ name: "Screaming Frog", icon: "bug_report" },
];
---

<MainLayout
	title="Wojciech Smolarek | Technical SEO Specialist"
	description="Ekspert Technical SEO. Optymalizacja wydajności (Core Web Vitals), audyty techniczne, strategia indeksowania i migracje serwisów. Zwiększ widoczność swojego biznesu."
>
	<main id="main-content">
		<Hero />
		<ServicesHighlight />

		<!-- TrustedBy Section -->
		<section
			class="py-24 px-6 md:px-12 bg-secondary border-b border-black/10"
			aria-label="Zaufali mi"
		>
			<div class="max-w-7xl mx-auto">
				<h2
					class="font-mono text-xs uppercase tracking-widest mb-12 text-gray-600 border-b border-black/10 pb-4 inline-block"
				>
					Zaufali mi
				</h2>
				<div
					class="grid grid-cols-2 md:grid-cols-4 gap-12 md:gap-20 items-center opacity-70 grayscale hover:grayscale-0 transition-all duration-500"
				>
					<div
						class="flex items-center justify-center"
						aria-label="TechData"
					>
						<span
							class="font-display font-bold text-2xl tracking-tighter"
						>
							TECH<span class="font-light">DATA</span>
						</span>
					</div>
					<div
						class="flex items-center justify-center"
						aria-label="Nexus"
					>
						<span
							class="font-mono font-bold text-xl tracking-widest border-2 border-current px-2 py-1"
						>
							NEXUS
						</span>
					</div>
					<div
						class="flex items-center justify-center"
						aria-label="eCommerce Pro"
					>
						<span class="font-sans font-black text-2xl italic">
							eCommerce<span
								class="text-xs not-italic font-normal align-top"
								>PRO</span
							>
						</span>
					</div>
					<div
						class="flex items-center justify-center"
						aria-label="Ventures"
					>
						<span
							class="font-display font-bold text-xl uppercase tracking-[0.2em]"
						>
							Ventures
						</span>
					</div>
				</div>
			</div>
		</section>

		<StatsSection />
		<Expertise />

		<!-- Testimonial Section -->
		<section class="py-32 px-6 md:px-12 bg-white border-y border-black/10">
			<div
				class="max-w-6xl mx-auto flex flex-col items-center text-center"
			>
				<Icon name="format_quote" class="w-16 h-16 opacity-10 mb-8" />
				<p
					class="font-display text-3xl md:text-5xl font-medium leading-tight mb-12 max-w-4xl"
				>
					"Współpraca z Wojciechem to punkt zwrotny dla naszego
					e-commerce. Jego techniczna precyzja bezpośrednio przełożyła
					się na <span class="bg-black text-white px-2 italic"
						>200% wzrostu</span
					> ruchu organicznego w zaledwie jeden kwartał."
				</p>
				<div class="text-left md:text-center">
					<p
						class="font-display font-bold text-xl uppercase tracking-wider"
					>
						Michał Krawczyk
					</p>
					<p
						class="font-mono text-xs text-gray-500 uppercase tracking-widest mt-2"
					>
						CEO, TechRetail PL
					</p>
				</div>
			</div>
		</section>

		<Philosophy />

		<!-- TechStack Section -->
		<section
			class="py-20 border-b border-black/10"
			aria-label="Stos Technologiczny"
		>
			<div class="max-w-7xl mx-auto px-6 md:px-12">
				<h2
					class="text-center font-mono text-xs uppercase tracking-widest mb-12 text-gray-600"
				>
					Stos Technologiczny
				</h2>
				<div
					class="flex flex-wrap justify-center gap-12 md:gap-24 opacity-60 grayscale hover:grayscale-0 transition-all duration-700"
				>
					{
						techStack.map((tech) => (
							<span class="font-display font-bold text-xl flex items-center gap-2 interactive">
								<Icon name={tech.icon} class="w-6 h-6" />{" "}
								{tech.name}
							</span>
						))
					}
				</div>
			</div>
		</section>
	</main>
</MainLayout>
