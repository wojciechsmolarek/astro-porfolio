---
// Services Highlight - Professional replacement for marquee
const services = [
    "Audyt Techniczny",
    "Optymalizacja Speed",
    "Architektura Schema",
    "Strategia Indeksowania",
    "Migracje",
    "Core Web Vitals",
];
---

<section
    class="py-16 md:py-20 border-y border-black/10 bg-gradient-to-r from-white via-gray-50 to-white"
>
    <div class="max-w-7xl mx-auto px-6 md:px-12">
        <div
            class="flex flex-col md:flex-row items-center justify-between gap-8"
        >
            <div class="flex-shrink-0">
                <h2
                    class="font-display text-2xl md:text-3xl font-bold uppercase tracking-tight"
                >
                    Specjalizacje
                </h2>
                <p
                    class="font-mono text-xs uppercase tracking-widest opacity-50 mt-2"
                >
                    Technical SEO
                </p>
            </div>

            <div class="flex-1 w-full md:w-auto">
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
                    {
                        services.map((service, index) => (
                            <div
                                class="group relative bg-white border border-black/10 rounded-lg px-4 py-3 hover:border-black/30 hover:shadow-lg transition-all duration-300 interactive"
                                style={`animation-delay: ${index * 100}ms`}
                            >
                                <div class="flex items-center gap-2">
                                    <span class="w-2 h-2 rounded-full bg-black group-hover:scale-150 transition-transform duration-300" />
                                    <span class="font-sans text-sm md:text-base font-medium tracking-tight">
                                        {service}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .group {
        animation: fadeInUp 0.6s ease-out backwards;
    }
</style>
