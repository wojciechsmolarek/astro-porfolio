---
import type { ServiceItem } from "../types";

const services: ServiceItem[] = [
    {
        id: "01",
        title: "Audyt Techniczny",
        impact: "Stabilny Wzrost",
        impactIcon: "trending_up",
        description:
            "Dogłębna analiza identyfikująca błędy indeksowania, blokady crawlowania (Crawl Budget) i wady architektury informacji, które hamują organiczny wzrost Twojego biznesu.",
    },
    {
        id: "02",
        title: "Optymalizacja Speed",
        impact: "Wyższa Konwersja",
        impactIcon: "bolt",
        description:
            "Poprawa wskaźników Core Web Vitals (LCP, FID, CLS). Zaawansowana minifikacja kodu, optymalizacja zasobów krytycznych i redukcja czasu odpowiedzi serwera (TTFB).",
    },
    {
        id: "03",
        title: "Schema i Dane",
        impact: "CTR i Rich Snippets",
        impactIcon: "visibility",
        description:
            "Wdrażanie zaawansowanych danych strukturalnych (JSON-LD), pomagających robotom Google zrozumieć kontekst, relacje i encje w treści, co przekłada się na bogate wyniki wyszukiwania.",
    },
    {
        id: "04",
        title: "Bezpieczna Migracja",
        impact: "Ochrona Przychodów",
        impactIcon: "shield",
        description:
            "Kompleksowe mapowanie przekierowań, strategia transferu autorytetu domeny i monitoring po-wdrożeniowy, gwarantujący zerową utratę ruchu i przychodów podczas rebrandingu.",
    },
];
---

<section class="py-32 px-6 md:px-12 bg-secondary relative" id="services">
    <div class="max-w-7xl mx-auto">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-24 border-b border-black pb-8"
        >
            <h2
                class="font-display text-5xl md:text-7xl font-bold uppercase tracking-tighter"
            >
                Ekspertyza
            </h2>
            <p class="font-mono text-xs mt-4 md:mt-0 uppercase tracking-widest">
                [ Wybrane Kompetencje ]
            </p>
        </div>

        <div class="space-y-0">
            {
                services.map((item) => (
                    <details class="group border-b border-black/20 cursor-pointer interactive">
                        <summary class="py-12 flex justify-between items-center transition-colors pr-4">
                            <div class="flex flex-col md:flex-row md:items-center gap-4 relative z-10 w-full">
                                {/* Title Group */}
                                <div class="flex items-baseline gap-6">
                                    <span class="font-mono text-xs opacity-40">
                                        {item.id}
                                    </span>
                                    <h3 class="font-display text-2xl md:text-5xl font-semibold uppercase transition-all">
                                        {item.title}
                                    </h3>
                                </div>

                                {/* Impact Badge - Pushed to right */}
                                <span class="hidden md:inline-flex items-center gap-1 px-3 py-1 border border-black/30 rounded-full text-[10px] font-mono uppercase tracking-widest bg-white/50 md:ml-auto md:mr-12">
                                    <span class="material-symbols-outlined text-sm">
                                        {item.impactIcon}
                                    </span>{" "}
                                    Wpływ: {item.impact}
                                </span>
                            </div>
                            <span class="material-symbols-outlined text-3xl transform group-open:rotate-180 transition-transform duration-300">
                                expand_more
                            </span>
                        </summary>
                        <div class="pb-12 md:pl-[3.5rem] max-w-2xl">
                            <p class="text-base md:text-lg text-gray-700 leading-relaxed font-sans border-l-2 border-black pl-6">
                                {item.description}
                            </p>
                        </div>
                    </details>
                ))
            }
        </div>
    </div>
</section>
